\chapter[Especificação Funcional]{Especificação Funcional}

\begin{enumerate}
  \item \textbf{Requisitos Funcionais}
      \begin{table}[h]
      \centering
      \caption{Especificação de Requisitos Funcionais}
      \label{my-label}
      \begin{tabular}{| l |  p{10cm} | p{3cm} |}
      \hline
      ID    & Descrição  & Prioridade \\
      \hline
      RF-01 & O sistema deve emitir um alerta para o condutor           & Alta       \\
      \hline
      RF-02 & O sistema deve calcular a distância entre os veículos     & Alta       \\
      \hline
      RF-03 & O sistema deve se comunicar com outros veículos           & Alta       \\
      \hline
      RF-04 & O sistema deve identificar carros vindo na direção oposta & Alta       \\
      \hline
      RF-05 & O sistema deve reconhecer veiculos de diferentes tamanhos & Alta       \\
      \hline
      RF-06 & O sistema deve ser capaz de fazer processamento de imagem & Média      \\
      \hline
      RF-07 & O sistema deve capturar a localização do veículo          & Alta \\
      \hline
      \end{tabular}
      \end{table}

  \item \textbf{Requisitos Não-Funcionais}
    \begin{table}[h]
    \centering
    \caption{Especificação de Requisitos Não-Funcionais}
    \label{my-label}
    \begin{tabular}{| l |  p{10cm} | p{3cm} |}
    \hline
    ID    & Descrição   & Atributo \\
    \hline
    RNF-01 & O Tempo de resposta deve ser $\leq$ 10 ms & Desempenho       \\
    \hline
    RNF-02 & Deve funcionar em ambientes com fortes trepidações & Suportabilidade       \\
    \hline
    RNF-03 & Deve funcionar sobre condições climáticas adversas & Suportabilidade       \\
    \hline
    RNF-04 & O sistema deve sempre estar ligado quando o veículo estiver ligado & Confiabilidade       \\
    \hline
    RNF-05 & O sistema deve possuir uma tela informativa da rodovia e dos carros ao seu redor (como um GPS) & Usabilidade       \\
    \hline
    \end{tabular}
    \end{table}

  \item \textbf{Requisitos Inversos}
    \begin{table}[h]
    \centering
    \caption{Especificação de Requisitos Inversos}
    \label{my-label}
    \begin{tabular}{| l |  p{12cm} |}
    \hline
    ID    & Descrição \\
    \hline
    RI-01 & O sistema não deve impedir o condutor de fazer a ultrapassagem \\
    \hline
    RI-02 & O sistema não influência a ultrapassagem \\
    \hline
    RI-03 & O sistema não funciona no perímetro urbano \\
    \hline
    \end{tabular}
    \end{table}

\end{enumerate}
